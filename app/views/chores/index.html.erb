<h1>Listing chores</h1>

<table>
  <tr>
    <th>Child</th>
    <th>Task</th>
    <th>Due on</th>
    <th>Completed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chores.each do |chore| %>
  <tr>
    <td><%= chore.child.name %></td>
    <td><%= chore.task.name %></td>
    <td><%= chore.due_on.strftime('%b %d') %></td>
    <td><%= chore.status %></td>
    <td><%= link_to 'Show', chore %></td>
    <td><%= link_to 'Edit', edit_chore_path(chore) %></td>
    <td><%= link_to 'Destroy', chore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

